@model IEnumerable<WebMongoDB.Models.Transacao>

@{
    ViewData["Title"] = "Filtro por Categoria";
}

<h1>Filtrar Transações por Categoria</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="FilterByCategory" method="get">
            <div class="form-group">
                <label for="category">Categoria:</label>
                <input type="text" name="category" class="form-control" value="@ViewBag.Category" placeholder="Digite a categoria" />
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
    </div>
</div>

<hr />

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <h3>Transações Encontradas</h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Valor</th>
                        <th>Categoria</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Amount.ToString("C")</td>
                            <td>@item.Category</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}


